{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": "types",
        "outDir": "lib",
        "rootDir": "src/client",
        "target": "es6",
        "module": "ES6",
        "moduleResolution": "node",
        "tsBuildInfoFile": "tsconfig.esm.tsbuildinfo",
        "skipLibCheck": true /* Skip type checking all .d.ts files. */
    },
    "include": [
        "src/client"
    ],
    "references": [
        {
            "path": "./tsconfig.cjs.json"
        },
    ],
}